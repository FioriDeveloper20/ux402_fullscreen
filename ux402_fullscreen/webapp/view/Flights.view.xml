<mvc:View controllerName="student00.com.sap.training.ux402.fullscreen.ux402_fullscreen.controller.Flights" 
    xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
    xmlns:cust="student00.com.sap.training.ux402.fullscreen.ux402_fullscreen.control">
	<Page id="idFlightsPage" navButtonPress="onNavBack" showNavButton="true" title="{AirLineName}">
		<content>
		    <l:VerticalLayout id="idVerticalLayout">
		        <ObjectHeader id="idCarrierInfo" title="{AirLineName}" number=" " numberUnit="{LocalCurrencyCode}" titleHref="{URL}">
			        <attributes>
				        <ObjectAttribute id="idAirLineID" text="{AirLineID}"></ObjectAttribute>
				        <ObjectAttribute id="idURL" text="{URL}"></ObjectAttribute>
			        </attributes>
		        </ObjectHeader>
                <core:ExtensionPoint name="carrierdetails"/>
		        <Table id="idFlights" items="{ path: 'CarrierFlights', sorter: { path: 'AirLineID' }}"  
			        mode="SingleSelectMaster" growing="true" growingThreshold="10">
			        <headerToolbar>
				        <Toolbar>
					        <Title text="Flights" level="H2"/>
				        </Toolbar>
			        </headerToolbar>
			        <columns>
				        <Column width="12em">
					        <Text text="{i18n>carriername}"/>
				        </Column>
				        <Column minScreenWidth="Tablet" demandPopin="true">
					        <Text text="{i18n>flightno}"/>
				        </Column>
				        <Column minScreenWidth="Tablet" demandPopin="true">
					        <Text text="{i18n>flightdate}"/>
				        </Column>
				        <Column minScreenWidth="Tablet" demandPopin="true">
					        <Text text="{i18n>seatmax}"/>
				        </Column>
				        <Column hAlign="Right">
					        <Text text="{i18n>seatoc}"/>
				        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					        <Text text="{i18n>planeInfo}"/>
				        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					        <Text text="{i18n>bookaction}"/>
				        </Column>
			        </columns>
			        <items>
				        <ColumnListItem>
					        <cells>
						        <ObjectIdentifier title="{AirLineID}" text="{AirLineID}"/>
						        <Text text="{FlightConnectionID}"/>
						        <Text text="{ path: 'FlightDate', type: 'sap.ui.model.type.Date' }"/>
						        <Text text="{EconomyClassMaximumSeats}"/>
						        <Text text="{EconomyClassOccupiedSeats}"/>
                                <cust:PlaneInfo planeType="{AirCraftType}" 
							        seatsMax="{EconomyClassMaximumSeats}" 
							        seatsOcc="{EconomyClassOccupiedSeats}"/>
                                <cust:HoverButton text="{i18n>bookaction}" 
							        allowHover="true" 
							        hoverText="{=${EconomyClassMaximumSeats} - ${EconomyClassOccupiedSeats}}" 
							        hover="onHover"
                                    press="onHoverPress">
                                    <cust:customData>
                                        <core:CustomData key="id" value="{AirLineID}"/>
										<core:CustomData key="date" value="{FlightDate}"/>
										<core:CustomData key="connid" value="{FlightConnectionID}"/>
                                    </cust:customData>
                                </cust:HoverButton>
					        </cells>
				        </ColumnListItem>
			        </items>
		        </Table>
	        </l:VerticalLayout>
		</content>
	</Page>
</mvc:View>
